<?xml version="1.0" encoding="utf-8"?>
<!-- res/color/selector_check_box_color.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado cuando el CheckBox está seleccionado -->
    <item android:state_checked="true" android:color="@color/colorSelected" />

    <!-- Estado por defecto o cuando el CheckBox no está seleccionado -->
    <item android:color="@color/colorUnselected" />
</selector>
